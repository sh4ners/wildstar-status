#typed-cursor{
  opacity: 0;
  background: white;
  color: white;
  width: 20px;
  font-weight: 100;
  animation: blink 0.7s infinite;
  &.hide {
    animation: none;
  }
}

@keyframes blink {
  0% { opacity: 1; }
  50% { opacity: 0; }
  100% { opacity: 1; }
}


.loading {
  transition: opacity .4s cubic-bezier(0.165, 0.84, 0.44, 1);
  background: rgba(grey, .3);
  border-radius: 4px;
  box-shadow: inset 0 0 0 1px rgba(grey, .6),
              0 4px 0 rgba(#000, .35);
  display: block;
  opacity: 0;
  padding: 74px 40px 40px;
  position: relative;

  &.show {
    transition: opacity .6s ease;
    opacity: 1;
  }

  [class^='line'] {
    transition: opacity .1s ease;
    opacity: 0;
    &.show { opacity: 1; }
  }

  &:before {
    background: rgba(grey, .6);
    border-radius: 4px 4px 0 0;
    box-sizing: border-box;
    color: black;
    font-family: sans-serif;
    font-size: 15px;
    font-style: italic;
    font-weight: 100;
    text-align: center;
    text-shadow: 0 1px 0 rgba(grey, .4);
    content: 'totally_not_hacking.sh';
    display: block;
    padding: 10px 20px;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 44px;
    z-index: 3;
  }

  .typed {
    color: white;
    &:before {
      color: red;
      position: relative;
      content: "root@wildstar ~$ ";
      display: inline-block;
      margin-right: 6px;
    }
  }
  p {
    codeblock();
    margin: 0;
  }
}
.status { color: gold; }
